$size = 300px

.visual-illusion
  width 100%
  height 100%
  background-color black;//cornsilk
  .inner
    /*perspective: 4000px;*/
    transform-style preserve-3d
    pointer-events none
    position relative
    transition transform 50ms linear
    .face
      // backface-visibility hidden
      position absolute
      width $size
      height $size
      left "calc(50% - calc(%s / 2))" % $size
      top  "calc(50% - calc(%s / 2))" % $size
      perspective: 1000px;
      background-color currentColor
      box-shadow inset 0 0 12px 7px #f00
      display: flex;
      justify-content: center;
      align-items: center;
      &.top
        // color: orange
        transform rotateX(0deg) rotateY(90deg) translateZ(150px)
      &.right
        // color: white
        transform rotateX(90deg) rotateY(0deg) translateZ(150px)
      &.left
        // color: red
        transform rotateX(-90deg) rotateY(0deg) translateZ(150px)
      &.front
        // color: green
        transform rotateX(0deg) rotateY(0deg) translateZ(150px)
      &.back
        // color: yellow
        transform rotateX(180deg) rotateY(0deg) translateZ(150px)
      &.bottom
        // color: blue
        transform rotateX(0deg) rotateY(-90deg) translateZ(150px)
      > *
        width: 100%; height: 100%;
        margin: auto;
        color: white;
        font-size: 7em;