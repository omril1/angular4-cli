$size = 200px

.visual-illusion
  width 100%
  height 100%
  background-color black;//cornsilk
  .inner
    /*perspective: 4000px;*/
    transform-style preserve-3d
    pointer-events none
    position relative
    transition transform 50ms linear
    .face
      backface-visibility hidden
      position absolute
      width $size
      height $size
      left "calc(50% - calc(%s / 2))" % $size
      top  "calc(50% - calc(%s / 2))" % $size
      perspective: 1000px;
      background-color currentColor
      outline currentColor 48px dotted
      box-shadow inset 0 0 16px 19px rgba(0, 0, 0, 0.65), 0 0 12px 7px #f00, 0 0 45px 83px rgba(0, 105, 171, 0.38)
      &.top
        color: orange
        transform rotateX(0deg) rotateY(90deg) translateZ(120px)
      &.right
        color: white
        transform rotateX(90deg) rotateY(0deg) translateZ(120px)
      &.left
        color: red
        transform rotateX(-90deg) rotateY(0deg) translateZ(120px)
      &.front
        color: green
        transform rotateX(0deg) rotateY(0deg) translateZ(120px)
      &.back
        color: yellow
        transform rotateX(180deg) rotateY(0deg) translateZ(120px)
      &.bottom
        color: blue
        transform rotateX(0deg) rotateY(-90deg) translateZ(120px)