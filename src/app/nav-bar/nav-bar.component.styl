@import '../colorPalette.styl'

:host
  background-color: $mainColor
  color: white
  display: flex
  flex-direction: column
  height: 100%
  width: 100%
  font-size 13px
  font-weight 500
  line-height 24px

.top-nav-links
  height 100%  
  width 100%
  flex-grow 1
  .divider
    border-bottom 1px solid $someGray
    opacity .5
    margin 18px 8px
.bottom-nav-links
  height 52px
  width 100%
  flex-shrink 1