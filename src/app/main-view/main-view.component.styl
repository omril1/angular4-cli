.table-header
  border 1px solid black
  display flex
  flex-direction: row
  .item-header
    flex-grow 1
    width 100%
    min-width 30px
    min-height 60px
    display: flex
    justify-content: center
    align-items: center
.table-rows
  border 1px solid #c4c4c4
  .item-row
    min-width 30px
    min-height 60px
    display flex
    flex-direction row
    border-bottom 1px solid gray
    .item-property
      flex-grow 1
      width 100%
      padding 0 10px
      display: flex
      justify-content: center
      align-items: center