$size = 200px
$colorList1 = (green orange white red yellow blue)
$colorList2 = (#c2e9fb #b2ff90 #a6c1ee #8fd3f4 #fda085 #fcb69f)
.visual-illusion
  width 100%
  height 100%
  font 3em cursive
  background-color black;//cornsilk
  .inner
    /*perspective: 4000px;*/
    transform-style preserve-3d
    pointer-events none
    position relative
    transition transform 50ms linear
    .face
      backface-visibility hidden
      position absolute
      display flex
      justify-content center
      align-items center
      width $size
      height $size
      left "calc(50% - calc(%s / 2))" % $size
      top  "calc(50% - calc(%s / 2))" % $size
      background linear-gradient(var(--color1), var(--color2))
      outline var(--color1) 48px dotted
      box-shadow inset 0 0 16px 19px rgba(0, 0, 0, 0.65), 0 0 12px 7px #f00, 0 0 45px 83px rgba(0, 105, 171, 0.38)

      
      transform var(--rotation) translateZ(120px)
      for $i in (0..6)
        &:nth-child({$i + 1})
          --color1: $colorList1[$i]
          --color2: $colorList2[$i]
          if $i < 4
            --rotation: rotateY($i * 90deg)
          else
            --rotation: "rotateX(%sdeg)" % (($i - 5) * 180 - 90)